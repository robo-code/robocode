<assembly xmlns="http://maven.apache.org/POM/4.0.0/assembly" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="assembly-v1.0.0.xsd">
    <id>bin</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <includes>
                <include>net.sf.robocode:robocode</include>
            </includes>
            <binaries>
                <outputDirectory>libs</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>net.sf.robocode:roborumble</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <outputDirectory>libs</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>net.sf.robocode:samples</include>
            </includes>
            <excludes>
                <exclude>net.sf.robocode:robocode</exclude>
            </excludes>
            <binaries>
                <outputDirectory>robots</outputDirectory>
                <unpack>true</unpack>
                <includeDependencies>false</includeDependencies>
            </binaries>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <fileSet>
            <directory>robocode/src/main/extract</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
        <fileSet>
            <directory>roborumble/src/main/extract</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
        <fileSet>
            <directory>samples/src/main/java/</directory>
            <includes>
                <include>**/*.properties</include>
                <include>**/*.java</include>
                <include>**/*.team</include>
                <include>**/*.html</include>
            </includes>
            <outputDirectory>robots</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>versions.txt</source>
            <outputDirectory></outputDirectory>
        </file>
    </files>
</assembly>