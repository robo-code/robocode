<assembly>
    <id>setup</id>
    <formats>
        <format>dir</format>
        <format>jar</format>
    </formats>
    
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>

        <!-- robocode.dotnet.api renamed to robocode.dll -->
        <moduleSet>
            <includes>
                <include>net.sf.robocode:robocode.dotnet.api</include>
            </includes>
            <binaries>
                <excludes>
                    <exclude>net.sf.robocode:robocode.dotnet.api</exclude>
                    <exclude>net.sf.robocode:robocode.dotnet.control.api</exclude>
                    <exclude>net.sf.robocode:robocode.api</exclude>
                    <exclude>net.sf.robocode:robocode.host</exclude>
                    <exclude>net.sf.robocode:robocode.repository</exclude>
                    <exclude>net.sf.robocode:robocode.core</exclude>
                    <exclude>net.sf.robocode:codesize</exclude>
                    <exclude>org.picocontainer:picocontainer</exclude>
                </excludes>
                <outputFileNameMapping>robocode.${module.extension}</outputFileNameMapping>
                <includeDependencies>false</includeDependencies>
                <outputDirectory>libs</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>

        <!-- robocode.dotnet.control.api renamed to robocode.control.dll -->
        <moduleSet>
            <includes>
                <include>net.sf.robocode:robocode.dotnet.control.api</include>
            </includes>
            <binaries>
                <excludes>
                    <exclude>net.sf.robocode:robocode.dotnet.api</exclude>
                    <exclude>net.sf.robocode:robocode.dotnet.control.api</exclude>
                    <exclude>net.sf.robocode:robocode.api</exclude>
                    <exclude>net.sf.robocode:robocode.host</exclude>
                    <exclude>net.sf.robocode:robocode.repository</exclude>
                    <exclude>net.sf.robocode:robocode.core</exclude>
                    <exclude>net.sf.robocode:codesize</exclude>
                    <exclude>org.picocontainer:picocontainer</exclude>
                </excludes>
                <outputFileNameMapping>robocode.control.${module.extension}</outputFileNameMapping>
                <includeDependencies>false</includeDependencies>
                <outputDirectory>libs</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>

        <!-- other libraries -->
        <moduleSet>
            <includes>
                <include>net.sf.robocode:robocode.dotnet.host</include>
                <include>net.sf.robocode:robocode.dotnet.repository</include>
            </includes>
            <binaries>
                <excludes>
                    <exclude>net.sf.robocode:robocode.dotnet.api</exclude>
                    <exclude>net.sf.robocode:robocode.dotnet.control.api</exclude>
                    <exclude>net.sf.robocode:robocode.api</exclude>
                    <exclude>net.sf.robocode:robocode.host</exclude>
                    <exclude>net.sf.robocode:robocode.repository</exclude>
                    <exclude>net.sf.robocode:robocode.core</exclude>
                    <exclude>net.sf.robocode:codesize</exclude>
                    <exclude>org.picocontainer:picocontainer</exclude>
                </excludes>
                <outputDirectory>libs</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>

        <!-- installer and static content -->
        <moduleSet>
            <includes>
                <include>net.sf.robocode:robocode.dotnet.installer</include>
                <include>net.sf.robocode:robocode.dotnet.content</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <unpack>true</unpack>
                <dependencySets>
                    <!-- installer and static content -->
                    <dependencySet>
                        <excludes>
				                    <exclude>net.sf.robocode:robocode.api</exclude>
				                    <exclude>net.sf.robocode:robocode.host</exclude>
				                    <exclude>net.sf.robocode:robocode.repository</exclude>
				                    <exclude>net.sf.robocode:robocode.core</exclude>
				                    <exclude>net.sf.robocode:codesize</exclude>
				                    <exclude>org.picocontainer:picocontainer</exclude>
                            <exclude>net.sf.robocode:robocode.dotnet.api</exclude>
				                    <exclude>net.sf.robocode:robocode.dotnet.control.api</exclude>
                            <exclude>net.sf.robocode:robocode.dotnet.samples</exclude>
                            <exclude>net.sf.robocode:robocode.dotnet.nhost</exclude>
                            <exclude>net.sf.robocode:robocode.dotnet.host</exclude>
                            <exclude>net.sf.jni4net:jni4net.j</exclude>
                            <exclude>net.sf.jni4net:jni4net.n</exclude>
                            <exclude>net.sf.jni4net:jni4net.n.w32.v20</exclude>
                            <exclude>net.sf.jni4net:jni4net.n.w64.v20</exclude>
                            <exclude>net.sf.jni4net:jni4net.n.w32.v40</exclude>
                            <exclude>net.sf.jni4net:jni4net.n.w64.v40</exclude>
                        </excludes>
                        <unpack>true</unpack>
                        <unpackOptions>
                            <excludes>
                                <exclude>**/META-INF/**</exclude>
                            </excludes>
                        </unpackOptions>
                    </dependencySet>

                </dependencySets>
            </binaries>
        </moduleSet>
        
        <!-- sample robots -->
        <moduleSet>
            <includes>
                <include>net.sf.robocode:robocode.dotnet.samples</include>
            </includes>
            <binaries>
                <excludes>
                  <exclude>net.sf.robocode:robocode.dotnet.content</exclude>
                  <exclude>net.sf.robocode:robocode.dotnet.installer</exclude>
                  <exclude>net.sf.robocode:robocode.api</exclude>
                  <exclude>net.sf.robocode:robocode.host</exclude>
                  <exclude>net.sf.robocode:robocode.repository</exclude>
                  <exclude>net.sf.robocode:robocode.core</exclude>
                  <exclude>net.sf.robocode:codesize</exclude>
                  <exclude>org.picocontainer:picocontainer</exclude>
                  <exclude>net.sf.robocode:robocode.dotnet.api</exclude>
                  <exclude>net.sf.robocode:robocode.dotnet.control.api</exclude>
                  <exclude>net.sf.robocode:robocode.dotnet.nhost</exclude>
                  <exclude>net.sf.robocode:robocode.dotnet.host</exclude>
                  <exclude>net.sf.jni4net:jni4net.j</exclude>
                  <exclude>net.sf.jni4net:jni4net.n</exclude>
                  <exclude>net.sf.jni4net:jni4net.n.w32.v20</exclude>
                  <exclude>net.sf.jni4net:jni4net.n.w64.v20</exclude>
                  <exclude>net.sf.jni4net:jni4net.n.w32.v40</exclude>
                  <exclude>net.sf.jni4net:jni4net.n.w64.v40</exclude>
                </excludes>
								<outputFileNameMapping>samplescs-${robocode.nversion}.${module.extension}</outputFileNameMapping>
                <outputDirectory>robots</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <fileSet>
            <excludes>
                <exclude>**/*.csproj</exclude>
                <exclude>**/*.iws</exclude>
                <exclude>**/*.user</exclude>
                <exclude>**/*.bak</exclude>
                <exclude>**/Thumbs.db</exclude>
                <exclude>**/~*</exclude>
                <exclude>**/.*</exclude>
                <exclude>**/_svn/**</exclude>
                <exclude>**/.svn/**</exclude>
                <exclude>**/.metadata/**</exclude>
                <exclude>**/bin/**</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/lib/**</exclude>
                <exclude>**/obj/**</exclude>
            </excludes>
            <directory>/robocode.dotnet.samples/src</directory>
            <outputDirectory>robots</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>robocode.dotnet.api/target/robocode.xml</source>
            <outputDirectory>libs</outputDirectory>
        </file>
        <file>
            <source>robocode.dotnet.api/target/Help/RobotAPI.chm</source>
        </file>
        <file>
            <source>robocode.dotnet.control.api/target/robocode.control.xml</source>
            <outputDirectory>libs</outputDirectory>
        </file>
        <file>
            <source>robocode.dotnet.control.api/target/Help/ControlAPI.chm</source>
        </file>
    </files>
</assembly>



