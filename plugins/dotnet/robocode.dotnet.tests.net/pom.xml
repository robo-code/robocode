<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>robocode.dotnet</artifactId>
        <groupId>net.sf.robocode</groupId>
        <version>${robocode.version}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.sf.robocode</groupId>
    <artifactId>robocode.dotnet.tests.net</artifactId>
    <version>${robocode.nversion}</version>
    <packaging>dotnet:library</packaging>
    <name>.NET tests.net for Robocode</name>
    <description>.NET tests.net for Robocode</description>
    <organization>
        <name>Robocode</name>
        <url>http://robocode.sf.net</url>
    </organization>
    <dependencies>
        <dependency>
			<groupId>org.nunit</groupId>
			<artifactId>nunit.framework</artifactId>
			<version>2.4.3.0</version>
            <type>dotnet:library</type>
        </dependency>
        <dependency>
            <groupId>net.sf.robocode</groupId>
            <artifactId>robocode.dotnet.api.net</artifactId>
            <version>${robocode.nversion}</version>
            <type>dotnet:library</type>
        </dependency>
        <dependency>
            <groupId>net.sf.robocode</groupId>
            <artifactId>robocode.dotnet.core.net</artifactId>
            <version>${robocode.nversion}</version>
            <type>dotnet:library</type>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <testSourceDirectory>src</testSourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.sonatype.nmaven.plugins</groupId>
                <artifactId>maven-dotnet-compiler-plugin</artifactId>
                <extensions>true</extensions>
                <version>0.17robocode</version>
                <configuration>
                    <aditionalOptions>/unsafe /nowarn:1591</aditionalOptions>
                </configuration>
            </plugin>
			<plugin>
				<groupId>org.sonatype.nmaven.plugins</groupId>
				<artifactId>maven-dotnet-test-plugin</artifactId>
				<configuration>
					<nunitHome>C:\Progra~1\NUnit2.4.3</nunitHome>
				</configuration>
			</plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.nunit</groupId>
                                    <artifactId>nunit.framework</artifactId>
                                    <version>2.4.3.0</version>
                                    <type>dotnet:library</type>
                                    <outputDirectory>target/test-assemblies</outputDirectory>
                                    <destFileName>nunit.framework.dll</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>