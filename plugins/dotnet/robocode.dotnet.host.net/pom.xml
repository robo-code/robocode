<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>robocode.dotnet</artifactId>
        <groupId>net.sf.robocode</groupId>
        <version>${robocode.version}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.sf.robocode</groupId>
    <artifactId>robocode.dotnet.nhost</artifactId>
    <version>${robocode.nversion}</version>
    <packaging>dotnet:library</packaging>
    <name>.NET nhost for Robocode</name>
	<description>.NET nhost for Robocode</description>
	<organization>
		<name>Robocode</name>
		<url>http://robocode.sf.net</url>
	</organization>
    <dependencies>
        <dependency>
            <groupId>net.sf.robocode</groupId>
            <artifactId>selvin.exportdllattribute</artifactId>
            <version>${robocode.nversion}</version>
		    <type>dotnet:library</type>
		    <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.robocode</groupId>
            <artifactId>selvin.exportdll</artifactId>
            <version>${robocode.nversion}</version>
		    <type>dotnet:exe</type>
		    <scope>provided</scope>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <plugins>
			<plugin>
				<groupId>org.sonatype.nmaven.plugins</groupId>
				<artifactId>maven-dotnet-compiler-plugin</artifactId>
				<extensions>true</extensions>
				<version>0.17robocode</version>
				<configuration>
		          <aditionalOptions>/unsafe /nowarn:1591</aditionalOptions>
		        </configuration>
			</plugin>
		    <plugin>
		        <groupId>org.jvnet.maven-antrun-extended-plugin</groupId>
		        <artifactId>maven-antrun-extended-plugin</artifactId>
		        <executions>
		          <execution>
		            <phase>process-classes</phase>
		            <configuration>
		              <tasks>
		               <resolveArtifact property="exportdll" groupId="net.sf.robocode" artifactId="selvin.exportdll" version="${robocode.nversion}" type="dotnet:exe"/>
		               <resolveArtifact property="exportdllattribute" groupId="net.sf.robocode" artifactId="selvin.exportdllattribute" version="${robocode.nversion}" type="dotnet:library"/>
		               <copy file="${exportdll}" todir="target/tool"/>
		               <copy file="${exportdllattribute}" todir="target/tool"/>
						<exec executable="cmd.exe" dir="target">
							<arg value="/c tool\selvin.exportdll-${robocode.nversion}.exe robocode.dotnet.nhost-${robocode.nversion}.dll"/>
						</exec>
		              </tasks>
		            </configuration>
		            <goals>
		              <goal>run</goal>
		            </goals>
		          </execution>
		        </executions>
		      </plugin>

	    </plugins>
    </build>
</project>