<?xml version="1.0" encoding="UTF-8"?>

<!-- ====================================================================== -->
<!--  Apache Ant build script for building Robocode                         -->
<!-- ====================================================================== -->

<project name="robocode" default="build" basedir="../build">
  <description>Apache Ant build script for building Robocode</description>

  <!-- Enable debug information when compiling -->  
  <property name="debug" value="on"/>

  <!-- Import common build file -->
  <import file="../build/build.xml"/>

  <!-- ====================================== -->
  <!-- Target: build                          -->
  <!-- ====================================== -->
  <target
      name="build"
      description="build Robocode"
      depends="compile.robocode, compile.robots">

    <!-- Copy resources -->
    <copy todir="${build}/resources">
      <fileset dir="../robocode/resources"/>
    </copy>

  	<!-- Copy robot properties files -->
    <copy todir="${build}/robots/sample">
      <fileset file="../robocodeextract/robots/sample/*.properties"/>
    </copy>
    <copy todir="${build}/robots/sampleteam">
      <fileset file="../robocodeextract/robots/sampleteam/*.properties"/>
    </copy>
    <copy todir="${build}/robots/sampleex">
      <fileset file="../robocodeextract/robots/sampleex/*.properties"/>
    </copy>

    <!-- Copy battles -->
    <copy todir="${build}/battles">
      <fileset dir="../robocodeextract/battles"/>
    </copy>

    <!-- Copy compilers -->
    <copy todir="${build}/compilers">
      <fileset dir="../robocodeextract/compilers"/>
    </copy>

    <!-- Copy templates -->
    <copy todir="${build}/templates">
      <fileset dir="../robocodeextract/templates"/>
    </copy>

    <!-- Copy browser batch files -->
    <copy todir="${build}">
      <fileset file="../robocodeextract/browser.*"/>
    </copy>
  	
    <!-- Copy pimods misc files -->
    <copy todir="${build}/misc">
      <fileset dir="../pimodsextract/misc"/>
    </copy>
    
  </target>

</project>